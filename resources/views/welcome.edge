<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Okwu | Home</title>

 <link rel="stylesheet" href="/css/main.css">
 <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<body>
  <div class="app-container">
    <section id="left-menu">
      <div class="account-dropdown">
        <div class="logo">
          <i class="fab fa-opera"></i>
        </div>
        <div class="name">Curtis Atkins</div>
        <div class="icon">
          <a href="#">
            <i class="fas fa-chevron-down"></i>
          </a>
        </div>


      </div>
      <div class="groups">
        <div class="group">
          <div class="title">Favorites</div>
          <ul>
            <li>link</li>
            <li>link</li>
            <li>link</li>
            <li>link</li>
          </ul>
        </div>
      </div>
    </section>
    <section id="content-container">
      <div class="search-header">
        <div class="search-box">
          <input type=text name="" value="" placeholder="search...">
          <div class="icon-section">

            <div class="updates">
              <div class="friends noti">
                <i class="fas fa-user-friends"></i>
                <div class="friend-count count active">0</div>
              </div>

              <div class="messages noti">
                <i class="fas fa-comments"></i>
                <div class="message-count count active">0</div>
              </div>

              <div class="notifications noti">
                <i class="fas fa-bell"></i>
                <div class="notification-count count active">0</div>
              </div>
            </div>
        </div>



      </div>
      <div class="content-area">
        <div class="compose-section">
          <textarea name="status" rows="8" cols="80" placeholder="Update Your Friends"></textarea>
          <div class="user-img"></div>
          <div class="buttons">
            <div class="photo-btn button">
              <i class="fas fa-camera"></i>
            </div>
            <div class="video-btn button">
              <i class="fas fa-video"></i>
            </div>
            <div class="send-btn button">
              <i class="fas fa-paper-plane"></i>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section id="messenger">
    </section>

  </div>
  <script src="/js/components/vendor.js"></script>
  <script src="/js/components/FirstComp.js"></script>
</body>
</html>
